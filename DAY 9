#include <iostream>

using namespace std;



int main() {

    int t;

    cin>>t;

    for(int i=0;i<t;i++)

    {

        int x,y;

        cin>>x;

        cin>>y;

        if(y%x==0)

        {

            int p=y/x-1;

            if(p<0)

           {

               cout<<0<<endl;

           }

           else

           {

                cout<<p<<endl;

           }

        }

        else

        {

            int p=y/x;

            cout<<p<<endl;       

        }

    }

	return 0;

}
